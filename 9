#include <stdio.h>
#include <string.h>

void reverseString(char* str) {
    int length = strlen(str);
    int i;
    for (i = 0; i < length / 2; ++i) {
        char temp = str[i];
        str[i] = str[length - i - 1];
        str[length - i - 1] = temp;
    }
}

int main() {
    char str[100];
    
    printf("문자열을 입력하세요: ");
    gets(str);
    
    reverseString(str);
    
    printf("뒤집힌 문자열: %s\n", str);
    
    return 0;
}
